include(cmake_test/cmake_test)

ct_add_test("print_result")
    include(cmake_test/detail_/utilities/print_result)
    _ct_add_section("No indent")
        _ct_print_result("Hello" "World" 0)
        ct_assert_prints("Hello......................................................................World")
    _ct_end_section()

    _ct_add_section("With indent")
        _ct_print_result("Hello" "World" 2)
        ct_assert_prints("        Hello..............................................................World")
    _ct_end_section()
ct_end_test()

ct_add_test("print_pass")
    include(cmake_test/detail_/utilities/print_result)
    _ct_print_pass("Bob" 0)
    ct_assert_prints("Bob.......................................................................PASSED")
ct_end_test()

ct_add_test("print_fail")
    include(cmake_test/detail_/utilities/print_result)
    _ct_print_fail("Bob" 0 "Hello World")
    ct_assert_prints("Bob.......................................................................FAILED")
    ct_assert_fails_as("Reason:")
ct_end_test()
